@model IEnumerable<SistemaGestorPacientes.Core.Domain.Entities.Cita>

@{
    ViewData["Title"] = "Lista de Citas";
}

<h2>Citas</h2>

<a asp-action="Create" class="btn btn-success">Agendar Cita</a>

<table class="table">
    <thead>
        <tr>
            <th>Paciente</th>
            <th>Médico</th>
            <th>Fecha</th>
            <th>Hora</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cita in Model)
        {
            <tr>
                <td>@cita.PacienteId</td>
                <td>@cita.MedicoId</td>
                <td>@cita.Fecha.ToShortDateString()</td>
                <td>@cita.Hora</td>
                <td>@cita.Estado</td>
                <td>@cita.Motivo</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@cita.Id" class="btn btn-warning">Editar</a>
                    <a asp-action="Delete" asp-route-id="@cita.Id" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
